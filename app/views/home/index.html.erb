<div class="row">
	<div class="col-sm-12">
		<h1>Expense Tracker</h1>
		<p class="lead">
			<% unless user_signed_in?  %>
				<%= link_to 'Click here', new_user_registration_path  %> to create an account or  <%= link_to 'click here',  new_user_session_path  %> to Sign in.
			<% else %>
				Welcome <%= current_user.first_name.titleize %>!
