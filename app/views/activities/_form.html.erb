<%= simple_form_for @activity do |f| %>
  <%= f.input :title, input_html: { class: 'form-control' }, label: 'Activity' %>
  <%= f.input :expense_type, input_html: {class: 'form_control'}, label: 'Expense Type', collection: ['Debit','Credit'] %>
  <%= f.input :amount, input_html: {class: 'form_control'}, label: 'Amount' %>
  <%= f.button :submit, input_html: {class: 'btn btn-success'} %>
<% end %>